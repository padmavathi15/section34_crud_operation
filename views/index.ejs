<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Notes</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="text-center mb-4">My Book Notes</h1>
    <div class="text-center mb-4">
      <a href="/add" class="btn btn-primary">Add New Book</a>
    </div>
    <div class="row g-4">
      <% books.forEach(book => { %>
        <div class="col-md-4">
          <div class="card">
            <img src="<%= book.cover_url %>" class="card-img-top" alt="Cover">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %> by <%= book.author %></h5>
              <p class="card-text">Rating: <%= book.rating %></p>
              <p class="card-text">Date Read: <%= book.date_read %></p>
              <p class="card-text">Review: <%= book.review %></p>
              <div class="d-flex justify-content-between">
                <form action="/edit/<%= book.id %>" method="get" class="m-0">
                  <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                </form>
                <form action="/delete/<%= book.id %>" method="post" class="m-0">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Bootstrap JS (optional for dropdowns, modals, etc.) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
